import java.lang.Math;
import java.util.Scanner;

public class Main{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int t = Integer.parseInt(sc.nextLine());
        while(t-- > 0){
            int a = sc.nextInt();
            int b = sc.nextInt();
            System.out.printf("%d %d %d\n",a + b, a - b, a/b);
        }
        sc.close();
    }
}
